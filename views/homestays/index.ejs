<% layout('layout/boilerplate.ejs') -%>
    <h1>All Homestays</h1>
    <button type="button" class="btn btn-info mb-3">
        <div>
            <a href="/homestays/new" class="text-decoration-none text-white">Add Homestay</a>
        </div>
    </button>
    <% for (let homestay of homestays){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=homestay.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= homestay.title %>
                        </h5>
                        <p class="card-text">
                            <%= homestay.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= homestay.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/homestays/<%=homestay._id%>">View <%=homestay.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
